@{
    var pageName = ViewContext.HttpContext.Request.Path.Value.Substring(ViewContext.HttpContext.Request.Path.Value.LastIndexOf("/") + 1);
    switch (pageName) {
        case "Login":
        case "Register":
        case "Moderation":
        case "UserRoles":
        case "Timeout":
            Layout = "_LayoutModal";
            break;
        default:
            Layout = "_Layout";
            break;
    }
}
